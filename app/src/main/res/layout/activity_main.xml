<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="ru.nikko777.simplekotlincalculator.ViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="bottom"
                android:text="@{model.textView}"
                android:lines="2"
                android:maxLines="2"
                android:textSize="35sp"  />

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/btclear"
                android:textSize="30sp"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btone"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/bttwo"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btthre"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/btdivide"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btfour"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/btfive"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/btsix"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/btmulty"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/btseven"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/bteight"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/btnine"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/btminus"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/btdote"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/btzero"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/btequal"
                android:textSize="25sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/btplus"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>
</layout>